{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start UI Dev Server",
      "type": "shell",
      "command": "bun run dev:ui",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:.*http://localhost:8070"
        }
      }
    },
    {
      "label": "Stop All Dev Servers",
      "type": "shell",
      "command": "pkill -f 'vite|bun.*dev' || true",
      "problemMatcher": []
    }
  ]
}
